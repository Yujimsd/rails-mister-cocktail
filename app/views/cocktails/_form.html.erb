<%= simple_form_for @cocktail do |f| %>
  <% if @cocktail.errors.any? %>
    <%= @cocktail.errors.full_messages.join(". ") %>
  <% end %>

  <div class="form-group">
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit %>
  </div>


<% end %>
