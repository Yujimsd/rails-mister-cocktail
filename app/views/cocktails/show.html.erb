


<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= @cocktail.name %></h1>
      <p>
        <%= link_to "Home", root_path  %>
      </p>
    </div>
    <div class="col">
      <h1>Ingredients</h1>
      <%= render "doses/form", dose: @dose %>
      <ul>
        <%  @cocktail.doses.each do |dose|%>
        <li><%= dose.ingredient[:name] %></li>
        <% end %>


      </ul>
    </div>
  </div>
</div>
