


<div class="container">
  <div class="row">
    <span class="formss">
    <div class="col">
      <h1><%= @cocktail.name %></h1>
      <p>
        <%= link_to "Home", root_path  %>
      </p>
    </div>
    <div class="col">
      <h1>Ingredients</h1>
      <%= render "doses/form", dose: @dose %>
      <ul>
        <%  @cocktail.doses.each do |dose|%>
          <li>
            <%= dose.ingredient[:name] %> - <%= dose.description %>
            <%= link_to "delete", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"}  %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  </span>
</div>
