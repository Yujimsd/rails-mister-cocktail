<% if @cocktail.photo.present? %>

<div class="showBody"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @cocktail.photo %>)">

<% else %>

<div class="showBody" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/500x400/?cocktail')">


<% end %>


  <div class="container">
    <div class="row">
      <span class="formss">
      <div class="col">
        <h1><%= @cocktail.name %></h1>
        <ul>
          <%  @cocktail.doses.each do |dose|%>
            <li>
              <%= dose.ingredient[:name] %> - <%= dose.description %>
              <%= link_to "delete", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"}  %>
            </li>
          <% end %>
        </ul>

      </div>
      <div class="col">
        <h1>Ingredients</h1>
        <%= render "doses/form", dose: @dose %>

      </div>
    </div>
    </span>
  </div>
</div>
